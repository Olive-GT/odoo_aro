<odoo>
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit.custom</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add fields to main invoice header area -->
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="serie"/>
                <field name="numero"/>
                <field name="tipo_dte"/>
            </xpath>
            
            <!-- Add description field to Other Info > Accounting section -->
            <xpath expr="//page[@name='other_info']//group[@name='accounting_info']" position="inside">
                <field name="descripcion_general"/>
            </xpath>
            
            <!-- Remove the previously added custom group -->
            <xpath expr="//sheet//group[@string='Campos Personalizados']" position="replace">
            </xpath>
        </field>
    </record>

    <record id="view_move_tree_inherit" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.custom</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="serie"/>
                <field name="numero"/>
                <field name="tipo_dte"/>
            </xpath>
        </field>
    </record>
</odoo>