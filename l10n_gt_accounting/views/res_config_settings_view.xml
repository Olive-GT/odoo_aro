<odoo>
    <record id="res_config_settings_view_form_inherit_isr" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.isr</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='purchase_tax_id']" position="after">
                <div class="row mt16">
                    <label string="Cuenta ISR" for="isr_account_id" class="col-lg-3 o_light_label"/>
                    <field name="isr_account_id"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
