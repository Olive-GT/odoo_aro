<odoo>
    <template id="report_account_move_compact">
        <t t-call="web.html_container">
            <t t-call="web.minimal_layout">
                <style>
                    .table th, .table td {
                        padding: 4px 6px !important;
                        font-size: 10px;
                        vertical-align: top;
                    }

                    .entry-block {
                        margin-bottom: 20px;
                        page-break-inside: avoid;
                    }

                    .entry-header {
                        margin-bottom: 6px;
                        font-size: 11px;
                        border-bottom: 1px solid #ccc;
                        padding-bottom: 4px;
                        font-weight: bold;
                    }

                    .entry-table tr {
                        page-break-inside: avoid;
                    }

                    .company-name {
                        font-size: 12px;
                        font-weight: bold;
                        margin-bottom: 2px;
                    }

                    .meta-info {
                        font-size: 10px;
                        margin-bottom: 4px;
                    }
                </style>

                <t t-foreach="docs" t-as="move">
                    <div class="entry-block">
                        <div class="entry-header company-name">
                            <t t-esc="move.company_id.name"/>
                        </div>
                        <div class="meta-info">
                            <strong>Partida:</strong> <t t-esc="move.name"/>
                            <span style="margin-left: 20px;"><strong>Ref:</strong> <t t-esc="move.ref or ''"/></span>
                            <span style="margin-left: 20px;"><strong>Fecha:</strong> <t t-esc="move.date"/></span>
                        </div>

                        <table class="table table-sm table-bordered entry-table" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th style="width:10%;">CÃ³digo</th>
                                    <th>Cuenta</th>
                                    <th style="width:20%; text-align: right;">Debe</th>
                                    <th style="width:20%; text-align: right;">Haber</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="move.line_ids" t-as="line">
                                    <tr>
                                        <td><t t-esc="line.account_id.code"/></td>
                                        <td><t t-esc="line.account_id.name"/></td>
                                        <td style="text-align: right;">
                                            <t t-esc="format_amount(line.debit, move.currency_id)"/>
                                        </td>
                                        <td style="text-align: right;">
                                            <t t-esc="format_amount(line.credit, move.currency_id)"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <td colspan="2" style="text-align: right;"><strong>Total:</strong></td>
                                    <td style="text-align: right;"><strong><t t-esc="format_amount(sum(line.debit for line in move.line_ids), move.currency_id)"/></strong></td>
                                    <td style="text-align: right;"><strong><t t-esc="format_amount(sum(line.credit for line in move.line_ids), move.currency_id)"/></strong></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
