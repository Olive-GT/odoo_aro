<odoo>
    <template id="report_account_move_compact">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="move">
                <div class="page" style="padding: 10px 20px;">
                    <h4 style="margin-bottom: 5px;"><t t-esc="move.company_id.name"/>: Partida</h4>
                    <p>
                        <strong>Partida:</strong> <t t-esc="move.name"/>
                        <span style="margin-left: 20px;"><strong>Ref:</strong> <t t-esc="move.ref or ''"/></span>
                        <span style="margin-left: 20px;"><strong>Fecha:</strong> <t t-esc="move.date"/></span>
                    </p>
                    <table class="table table-sm" style="font-size: 10px; margin-bottom: 10px;">
                        <thead>
                            <tr>
                                <th>CÃ³digo</th>
                                <th>Cuenta</th>
                                <th style="text-align:right;">Debe</th>
                                <th style="text-align:right;">Haber</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="move.line_ids" t-as="line">
                                <tr>
                                    <td><t t-esc="line.account_id.code"/></td>
                                    <td><t t-esc="line.account_id.name"/></td>
                                    <td style="text-align:right;"><t t-esc="formatLang(line.debit, currency_obj=move.currency_id)"/>
                                    <td style="text-align:right;"><t t-esc="formatLang(line.credit, currency_obj=move.currency_id)"/>
                                </tr>
                            </t>
                            <tr>
                                <td colspan="2"><strong>Total:</strong></td>
                                <td style="text-align:right;"><t t-esc="formatLang(sum(line.debit for line in move.line_ids), currency_obj=move.currency_id)"/></td>
                                <td style="text-align:right;"><t t-esc="formatLang(sum(line.credit for line in move.line_ids), currency_obj=move.currency_id)"/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
