<odoo>
    <!-- Acción del reporte PDF -->
    <record id="action_report_libros_pdf" model="ir.actions.report">
        <field name="name">Reporte Libros PDF</field>
        <field name="model">reporte.libros.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_gt_aro_accounting.reporte_libros_pdf_template</field>
        <field name="report_file">l10n_gt_aro_accounting.reporte_libros_pdf_template</field>
        <field name="print_report_name">'Reporte_Fiscal_' + object.libro</field>
        <field name="binding_model_id" ref="model_reporte_libros_wizard"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Acción del reporte Excel -->
    <report
        id="reporte_libros_excel"
        string="Reporte Libros Excel"
        model="reporte.libros.wizard"
        report_type="xlsx"
        name="report.l10n_gt_aro_accounting.reporte_libros_excel"
        file="Reporte Fiscal Excel"
        print_report_name="'Reporte_Fiscal_' + object.libro"
    />

    <record id="action_report_account_move_compact" model="ir.actions.report">
        <field name="name">Partidas</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_gt_aro_accounting.report_account_move_compact</field>
        <field name="report_file">l10n_gt_aro_accounting.report_account_move_compact</field>
        <field name="print_report_name">'Póliza - %s' % (object.name)</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
    </record>


</odoo>
