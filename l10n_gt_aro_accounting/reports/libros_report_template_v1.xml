<odoo>
    <!-- Template del reporte PDF -->
    <template id="reporte_libros_pdf_template">
        <t t-call="web.external_layout">
            <div class="page">
                <h2>Reporte de <t t-esc="doc.libro.title()"/></h2>
                <p><strong>Desde:</strong> <t t-esc="doc.date_start"/>  <strong>Hasta:</strong> <t t-esc="doc.date_end"/></p>
                <p><strong>Diario:</strong> <t t-esc="doc.journal_id.display_name"/></p>
                <p><strong>Folio Inicial:</strong> <t t-esc="data['folio_inicial']"/></p>

                <table class="table table-sm mt32">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Fecha</th>
                            <th>Serie</th>
                            <th>Número</th>
                            <th>NIT</th>
                            <th>Compañía</th>
                            <th class="text-right">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="index" t-value="data['folio_inicial']"/>
                        <t t-foreach="data['lines']" t-as="line">
                            <tr>
                                <td><t t-esc="index"/></td>
                                <td><t t-esc="line['fecha']"/></td>
                                <td><t t-esc="line['serie']"/></td>
                                <td><t t-esc="line['numero']"/></td>
                                <td><t t-esc="line['nit']"/></td>
                                <td><t t-esc="line['compania']"/></td>
                                <td class="text-right">
                                    <t t-esc="'{:,.2f}'.format(line['total'])"/>
                                </td>
                            </tr>
                            <t t-set="index" t-value="index + 1"/>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

    <!-- Acción del reporte PDF -->
    <report
        id="reporte_libros_pdf"
        string="Reporte Libros PDF"
        model="reporte.libros.wizard"
        report_type="qweb-pdf"
        name="l10n_gt_aro_accounting.reporte_libros_pdf_template"
        file="l10n_gt_aro_accounting.reporte_libros_pdf_template"
        print_report_name="'Reporte_Fiscal_' + object.libro"
        noupdate="0"
    />

    <!-- Acción del reporte Excel -->
    <report
        id="reporte_libros_excel"
        string="Reporte Libros Excel"
        model="reporte.libros.wizard"
        report_type="xlsx"
        name="report.l10n_gt_aro_accounting.reporte_libros_excel"
        file="Reporte Fiscal Excel"
        print_report_name="'Reporte_Fiscal_' + object.libro"
        noupdate="0"
    />
</odoo>
